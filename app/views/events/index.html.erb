<h1 class="text-3xl font-bold underline">Let's find some events to attend!</h1>

<div class="block max-w-sm p-6 border border-gray-200 rounded-lg" >
  <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">Available Events</h2>
  <h3 class="mb-1 text-l font-bold">Past Events</h3>
  <ul>
    <% @events.past.each do |event| %>
      <li class="font-normal text-gray-700" >
       <%= link_to event.location, event_path(event.id) %>
      </li>
    <% end %>
  </ul> 
  <h3 class="mb-1 text-l font-bold">Future Events</h3>
  <ul>
    <% @events.future.each do |event| %>
      <li class="font-normal text-gray-700" >
       <%= link_to event.location, event_path(event.id) %>
      </li>
    <% end %>
  </ul> 
</div>

<%= button_to 'Create event', new_event_path, :method => "get", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
