<h1 class="max-w-sm mx-auto mb-5 mt-5 text-xl" >
<%= @user.email %>
</h1>
<div class="block max-w-sm p-6 border border-gray-200 rounded-lg" >
  <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">Events I'm hosting</h2>
  <ul>
    <% @created_events.each do |event| %>
      <li class="font-normal text-gray-700" >
       <%= link_to event.location, event_path(event.id) %>
      </li>
    <% end %>
  </ul> 
</div>
<div class="block max-w-sm p-6 border border-gray-200 rounded-lg" >
  <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">Events I'm attending</h2>
  <ul>
    <% @attended_events.each do |event| %>
      <li class="font-normal text-gray-700" >
       <%= link_to event.location, event_path(event.id) %>
      </li>
    <% end %>
  </ul> 
</div>
<%= button_to 'Back to events', root_path, :method => 'get', class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>